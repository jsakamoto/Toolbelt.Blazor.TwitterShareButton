@page "/counter"

<h1>Counter</h1>

<p>Current count: @currentCount</p>

<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>

<div style="margin-top:16px;">
    <TwitterShareButton Text="@($"Current Count is {currentCount}")" Size="Large"></TwitterShareButton>
    <span>&lt;-- Tweet here!</span>
</div>

@functions {
    int currentCount = 0;

    void IncrementCount()
    {
        currentCount++;
    }
}
