@page "/"

<h1>Hello, world!</h1>

<p>
    Welcome to your new app.
</p>

<p>
    <label><input type="checkbox" bind="@ShowTwitterButton" />Show Twitter Button</label>
</p>
@if (ShowTwitterButton)
{
    <p>
        <TwitterShareButton Id="tweet-button"
                            CssClass="foo bar"
                            Text="@Message"
                            HashTags="foobar"
                            Url="http://localhost:64178/counter"
                            Via=""
                            Related="twitter"
                            Size="Large"
                            Lang="ja"
                            DNT="true"></TwitterShareButton>
    </p>
}

<p>Counter: @counter</p>
<p>
    <button onclick="@DoNothing" class="btn btn-primary">DO NOTHING</button>
    <button onclick="@ChangeSomething" class="btn btn-primary">CHANGE SOMETHING</button>
</p>

<SurveyPrompt Title="How is Blazor working for you?" />

@functions{

    string Message = Guid.NewGuid().ToString("N");

    bool ShowTwitterButton = false;

    int counter;

    void DoNothing()
    {
        counter++;
        Console.WriteLine("Do Nothing!");
    }

    void ChangeSomething()
    {
        Message = Guid.NewGuid().ToString("N");
        Console.WriteLine("Change Something!");
    }
}